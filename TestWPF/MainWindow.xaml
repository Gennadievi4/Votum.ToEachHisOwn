        <StatusBar DockPanel.Dock="Bottom" Background="LightGray">
            <StatusBarItem HorizontalAlignment="Center">
                <TextBlock>Кол-во участников: 4</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>