<Window x:Class="TestWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialdisgn="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:TestWPF"
        mc:Ignorable="d"
        
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Icon="Resources/Files/ico2.png"
        
        Title="Каждому своё!" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel LastChildFill="False">
        <Menu DockPanel.Dock="Top" IsMainMenu="True">
            <MenuItem Header="Файл" Height="20">
                <MenuItem Header="Закрыть">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="О нас" Height="20"/>
        </Menu>
        <ToolBarTray DockPanel.Dock="Top" Background="Transparent">
            <ToolBar Background="Transparent">
                <ComboBox Width="150" 
                          materialdisgn:HintAssist.Hint="Выберите базу">
                    <ComboBoxItem Content="Таблица умножения"/>
                    <ComboBoxItem Content="1-й класс"/>
                    <ComboBoxItem Content="2-й класс"/>
                    <ComboBoxItem Content="3-й класс"/>
                    <ComboBoxItem Content="4-й класс"/>
                    <ComboBoxItem Content="5-й класс"/>
                    <ComboBoxItem Content="6-й класс"/>
                    <ComboBoxItem Content="7-й класс"/>
                    <ComboBoxItem Content="8-й класс"/>
                    <ComboBoxItem Content="9-й класс"/>
                    <ComboBoxItem Content="10-й класс"/>
                    <ComboBoxItem Content="11-й класс"/>
                </ComboBox>
                <Button ToolTip="Добавить базу" Padding="0" Height="20" Width="30">
                    <materialdisgn:PackIcon Kind="Add" Height="18" Width="18"/>
                </Button>
                <Button ToolTip="Удалить базу" Padding="0" Height="20" Width="30">
                    <materialdisgn:PackIcon Kind="Delete" />
                </Button>
            </ToolBar>
            <ToolBar Band="0" ToolBar.OverflowMode="AsNeeded" Background="Transparent">
                <Button Padding="0" ToolTip="Показать ошибку на экране пульта">
                    <materialdisgn:PackIcon Kind="SmartphoneText"/>
                </Button>
                <Button Padding="0" ToolTip="Показать рейтинг на экране пульта">
                    <materialdisgn:PackIcon Kind="SmartphoneInformation"/>
                </Button>
                <Button Padding="0" ToolTip="Ограничить время ответа">
                    <materialdisgn:PackIcon Kind="TimerSand"/>
                </Button>
            </ToolBar>
        </ToolBarTray>
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <GroupBox Header="Участники игры"
                      Style="{DynamicResource MaterialDesignGroupBox}"
                      Margin="10"
                      materialdisgn:ShadowAssist.ShadowDepth="Depth3"
                      BorderThickness="0">
                <DataGrid ItemsSource="{Binding Students}"
                          IsReadOnly="True"
                          HorizontalScrollBarVisibility="Disabled"
                          AlternationCount="1"
                          AlternatingRowBackground="LightGray"
                          Height="500"
                          HeadersVisibility="Column"
                          AutoGenerateColumns="False"
                          materialdisgn:DataGridAssist.CellPadding="0"
                          materialdisgn:DataGridAssist.ColumnHeaderPadding="0"
                          materialdisgn:DataGridAssist.EnableEditBoxAssist="False"
                          ColumnWidth="*">
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Style>
                        <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <materialdisgn:DataGridTextColumn Header="№ пульта и № комплекта пультов" Binding="{Binding RemoteId}">
                            <materialdisgn:DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </materialdisgn:DataGridTextColumn.ElementStyle>
                        </materialdisgn:DataGridTextColumn>
                        <DataGridTemplateColumn Header="Кол-во отвеченных вопросов" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Questions}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Кол-во ошибок">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Errors}" HorizontalAlignment="Center" Foreground="Red"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Кол-во просроченных ответов">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Answers}" HorizontalAlignment="Center" Foreground="Blue"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="% выполнения теста">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Wins}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="% правильных ответов">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Right}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Суммарное время">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Time}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Рейтинг участника">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Rating}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Рейтинг общий участника">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding RatingAll}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <GroupBox Grid.Row="1"
                      Header="Архив участника №1-8681"
                      Margin="10"
                      materialdisgn:ShadowAssist.ShadowDepth="Depth3"
                      BorderThickness="0"
                      >
                <DockPanel LastChildFill="False" 
                           Height="300"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top">
                    <ListView Width="auto" 
                              ItemsSource="{Binding Errors}"
                              DockPanel.Dock="Top">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Неправильный ответ" DisplayMemberBinding="{Binding Error1}"/>
                                <GridViewColumn Header="Просроченный ответ" DisplayMemberBinding="{Binding Error2}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button VerticalAlignment="Top" 
                            Width="270" 
                            Height="40"
                            DockPanel.Dock="Bottom">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Выгрузить архив участника игры"/>
                                <materialdisgn:PackIcon 
                                    Kind="ContentSaveAlert" 
                                    Margin="5 0 0 0"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </DockPanel>
            </GroupBox>
